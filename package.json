    "vue-router": "^4.6.4",
    "vuex": "^4.1.0"
  },
  "devDependencies": {
    "@types/compression": "^1.8.1",
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.2",
    "@types/serve-favicon": "^2.5.7",
    "@vitejs/plugin-vue": "^5.2.4",
    "rimraf": "^6.1.2",
    "stylus": "^0.54.8",
    "typescript": "^5.9.3",
    "vite": "^5.4.21",
